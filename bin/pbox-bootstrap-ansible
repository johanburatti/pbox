#!/usr/bin/env bash

set -e

sudo apt-get update

# for bootstrapping ansible
sudo apt-get install -y python-pip python-dev software-properties-common libffi-dev libssl-dev libyaml-dev

# ansible won't install without these
sudo pip install markupsafe requests 

# TODO: port configuration to ansible 2.0
sudo pip install ansible==1.9.4
