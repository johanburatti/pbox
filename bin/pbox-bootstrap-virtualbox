#!/usr/bin/env bash

set -e

sudo apt-get update

# for building vbox guest additions
sudo apt-get install -y build-essential gcc dkms xorg

# mount guest additions CD
sudo mount /dev/cdrom /media/cdrom

# install guest additions
sudo /media/cdrom/VBoxLinuxAdditions.run

# grant access to vbox shared folders
sudo usermod -a -G vboxsf "$USER"
